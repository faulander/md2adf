{
  "name": "@faulander/md2adf",
  "version": "1.0.0",
  "description": "Bidirectional converter between Markdown and Atlassian Document Format (ADF) with support for mentions, emojis, and smart links.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "validate": "ts-node scripts/validate-schema.ts",
    "prepare": "npm run build"
  },
  "dependencies": {
    "markdown-it": "^14.0.0",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0"
  },
  "author": "Harald Fauland <https://github.com/faulander>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/faulander/md2adf"
  },
  "keywords": [
    "markdown",
    "atlassian",
    "jira",
    "confluence",
    "adf",
    "converter",
    "typescript",
    "smart-links",
    "emoji",
    "mention"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
